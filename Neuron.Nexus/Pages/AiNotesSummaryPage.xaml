<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Neuron.Nexus.Pages.AiNotesSummaryPage"
             xmlns:translator="clr-namespace:Neuron.Nexus.Exstensions"
             Title="{translator:Translate NotesSummary}"
             
             >
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Editor x:Name="RawEditorVertical" Text="{Binding RawMarkdownText}" Grid.Row="0" />

        <FlexLayout Direction="Row" JustifyContent="SpaceAround" Grid.Row="1" Margin="15">
            <Button Text="Copy to Clipboard"
            Command="{Binding CopyToClipboardCommand}" />

            <Button Text="Show preview"
            Command="{Binding ShowPreviewCommand}" />
        </FlexLayout>


    </Grid>


</ContentPage>