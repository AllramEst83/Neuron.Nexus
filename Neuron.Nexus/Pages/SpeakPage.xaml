<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Neuron.Nexus.Pages.SpeakPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollView Grid.Row="0">
            <!-- Chat area -->
            <StackLayout x:Name="ChatArea" Orientation="Vertical">
                <!-- Chat messages go here -->
            </StackLayout>
        </ScrollView>

        <!-- Static bar at the bottom -->
        <StackLayout Grid.Row="1" BackgroundColor="LightGray" Padding="0,10,0,10">
            <FlexLayout JustifyContent="SpaceEvenly">

                <ImageButton 
                Source="microphone.png"
                CornerRadius="20"
                HeightRequest="40"
                WidthRequest="40"
                Padding="5"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand" />

                <ImageButton 
                Source="stop.png"
                CornerRadius="20"
                HeightRequest="40"
                WidthRequest="40"
                Padding="5"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand" />

                <ImageButton 
                Source="microphone.png"
                CornerRadius="20"
                HeightRequest="40"
                WidthRequest="40"
                Padding="5"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand" />

            </FlexLayout>
        </StackLayout>
    </Grid>

</ContentPage>
