<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Neuron.Nexus.Pages.SpeakPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollView 
            Grid.Row="0"
            Style="{StaticResource scrollViewBackground}">
            <!-- Chat area -->
            <StackLayout x:Name="ChatArea" Orientation="Vertical">
                <!-- Chat messages go here -->
            </StackLayout>
        </ScrollView>
      
        <!-- Static bar at the bottom -->
        <StackLayout Grid.Row="1" Style="{StaticResource stackLayoutBackground}">
            <FlexLayout JustifyContent="SpaceEvenly">

                <ImageButton  Source="microphone.png" />
                <ImageButton Source="stop.png" />
                <ImageButton Source="microphone.png"/>

            </FlexLayout>
        </StackLayout>
    </Grid>

</ContentPage>
